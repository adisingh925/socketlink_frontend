{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/signup",
        "destination": "/signup.html"
      },
      {
        "source": "/auth/action",
        "destination": "/auth/action.html"
      },
      {
        "source": "/forgot-password",
        "destination": "/forgot-password.html"
      }
    ]
  }
}
